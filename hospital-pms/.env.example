# Supabase Configuration
# Get these values from your Supabase project dashboard
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Application URLs
# Update these for your production environment
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Auth Configuration
# Session timeout in milliseconds (8 hours = 28800000)
NEXT_PUBLIC_SESSION_TIMEOUT=28800000

# Database Configuration (Direct access - use carefully)
# Get this from Supabase dashboard under Settings > Database
DATABASE_URL=postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres

# Email Configuration (Optional - for custom SMTP)
# If not set, Supabase's default email service will be used
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@hospital.com
SMTP_PASS=your-app-specific-password
SMTP_FROM_EMAIL=noreply@hospital.com
SMTP_FROM_NAME=Hospital PMS

# Security Keys
# Generate a secure random string for encryption
ENCRYPTION_KEY=your-32-character-encryption-key

# Feature Flags (Optional)
NEXT_PUBLIC_ENABLE_EMAIL_VERIFICATION=true
NEXT_PUBLIC_ENABLE_MAGIC_LINK=false
NEXT_PUBLIC_ENABLE_SOCIAL_AUTH=false

# Development Settings
# Set to 'development' for local development
NODE_ENV=development

# Cloud Storage (Supabase Storage)
# Bucket names for different file types
STORAGE_BUCKET_MEDICAL_DOCS=medical-documents
STORAGE_BUCKET_PROFILE_IMAGES=profile-images
STORAGE_BUCKET_REPORTS=reports

# SMS Service (for appointment reminders)
SMS_API_KEY=your-sms-api-key
SMS_FROM_NUMBER=+821012345678

# Logging Configuration
# Options: error, warn, info, debug
LOG_LEVEL=info

# Analytics (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Sentry Error Tracking (Optional)
SENTRY_DSN=your-sentry-dsn
NEXT_PUBLIC_SENTRY_DSN=your-public-sentry-dsn

# Rate Limiting (Optional)
# Number of requests per window
RATE_LIMIT_REQUESTS=100
# Window duration in seconds
RATE_LIMIT_WINDOW=60

# Redis Configuration (Optional - for caching/sessions)
REDIS_URL=redis://localhost:6379

# File Upload Configuration
# Maximum file size in MB
MAX_FILE_SIZE_MB=10
# Allowed file extensions (comma-separated)
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Monitoring (Optional)
# For application performance monitoring
NEW_RELIC_LICENSE_KEY=your-new-relic-key
NEW_RELIC_APP_NAME=Hospital-PMS